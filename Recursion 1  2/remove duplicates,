import java.util.*;

class Solution {
    int[] removeDuplicates(int[] arr) {
        Set<Integer> set = new LinkedHashSet<>(); // keeps order + removes duplicates
        for (int num : arr) {
            set.add(num);
        }

        // convert set back to array
        int[] result = new int[set.size()];
        int i = 0;
        for (int num : set) {
            result[i++] = num;
        }

        return result;
    }
}
